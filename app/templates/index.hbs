<div id="index-wrapper" class="text-center">
	<div id="main-picture" ></div>
	<img id="profile" src="/assets/me.jpg" class="img-responsive img-rounded" alt="">
	<hr>
	<div id="index-content" class="container">
		<h1 class="main-heading">Tim Kellogg's Articles</h1>	
	</div>
	<hr>

	<div id="article-container">
			{{#each model as |article|}}
			<div class="individual-article text-center">
				<h2 class="article-title">{{article.title}}</h2>
				<p class="lead">{{article.categories}}</p>
			</div>
			{{/each}}
	</div>
</div>